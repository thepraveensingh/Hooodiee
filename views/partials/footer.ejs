    /* Basic styles for body and html to enable full height */
    html, body {
      height: 100%;
      margin: 0;
      display: flex;
      flex-direction: column;
    }

    /* Main content will take available space */
    .content {
      flex: 1; /* This allows the content to take available space */
    }

    footer {
      background-color: #ffffff; /* Dark gray background */
      color: white;
      padding: 20px 0; /* Padding for top and bottom */
      text-align: center; /* Center text in footer */
    }

    footer a {
      color: #a0aec0; /* Light gray for links */
      margin: 0 10px; /* Horizontal spacing between links */
    }

    footer a:hover {
      color: white; /* Change link color on hover */
    }
  </style>
</head>
